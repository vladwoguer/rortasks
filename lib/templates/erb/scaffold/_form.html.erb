<%%= form_for @<%= singular_table_name %>, :html => { :class => "w3-container" }   do |f| %>
  <%% if @<%= singular_table_name %>.errors.any? %>
    <div id="error_explanation">
      <h2><%%= pluralize(@<%= singular_table_name %>.errors.count, "error") %> prohibited this <%= singular_table_name %> from being saved:</h2>

      <ul>
      <%% @<%= singular_table_name %>.errors.full_messages.each do |message| %>
        <li><%%= message %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>

<% attributes.each do |attribute| -%>
  <div class="field">
<% if attribute.password_digest? -%>
   
    <%%= f.password_field :password , { :class => 'w3-input' }  %>
     <%%= f.label :password %><br>
     <p></p>
  </div>
  <div class="field">
  
    <%%= f.password_field :password_confirmation  , { :class => 'w3-input' }  %>
      <%%= f.label :password_confirmation %><br>
       <p></p>
<% else -%>
   
    <%%= f.<%= attribute.field_type %> :<%= attribute.column_name   %>  , { :class => 'w3-input' }%>
     <%%= f.label :<%= attribute.column_name %>  %><br>
      <p></p>
<% end -%>
  </div>
<% end -%>
  <div class="actions">
    <%%= f.submit %>
  </div>
<%% end %>
